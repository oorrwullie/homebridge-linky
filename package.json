{
  "name": "homebridge-linky",
  "version": "0.4.0",
  "description": "A simple API server to control HomeKit devices remotely via Homebridge.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "build:scripts": "tsc src/scripts/generate-release-notes.ts --outDir dist/scripts",
    "prepublishOnly": "npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepare": "husky && husky install",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "homebridge-plugin",
    "homekit",
    "iot",
    "api",
    "remote-control",
    "smart-home"
  ],
  "engines": {
    "node": ">=18.0.0",
    "homebridge": ">=1.6.0"
  },
  "homebridge": {
    "pluginAlias": "Linky",
    "pluginType": "platform"
  },
  "author": {
    "name": "Kevin Payne",
    "email": "payneks@gmail.com",
    "url": "https://oorrwullie.com"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.2",
    "fastify": "^4.24.2"
  },
  "devDependencies": {
    "@eslint/css": "0.7.0",
    "@eslint/js": "9.25.1",
    "@eslint/json": "0.12.0",
    "@eslint/markdown": "6.4.0",
    "@types/node": "22.15.2",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-prettier": "5.2.6",
    "globals": "16.0.0",
    "homebridge": "1.6.1",
    "husky": "^8.0.0",
    "lint-staged": "15.5.1",
    "openai": "4.96.0",
    "patch-package": "8.0.0",
    "postinstall-postinstall": "2.1.0",
    "prettier": "3.5.3",
    "simple-git": "3.27.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "8.31.0"
  }
}
